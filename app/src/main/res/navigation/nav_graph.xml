<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_dest">

    <fragment
        android:id="@+id/home_dest"
        android:name="io.github.beomjo.search.ui.HomeFragment"
        android:label="@string/home_fragment_title"
        tools:layout="@layout/fragment_home">


        <action
            android:id="@+id/action_home_dest_to_detail_dest"
            app:destination="@id/detail_dest" />

        <action
            android:id="@+id/action_home_dest_to_search_dest"
            app:destination="@id/search_dest" />
    </fragment>

    <fragment
        android:id="@+id/search_dest"
        android:name="io.github.beomjo.search.ui.SearchFragment"
        android:label="@string/search_fragment_title"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_search_dest_to_detail_dest"
            app:destination="@id/detail_dest" />
    </fragment>

    <fragment
        android:id="@+id/detail_dest"
        android:name="io.github.beomjo.search.ui.DetailFragment"
        android:label="@string/detail_fragment_title"
        tools:layout="@layout/fragment_detail" />

</navigation>